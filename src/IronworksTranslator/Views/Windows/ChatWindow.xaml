<Window x:Class="IronworksTranslator.Views.Windows.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:IronworksTranslator.Views.Windows"
        xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:utils_ui="clr-namespace:IronworksTranslator.Utils.UI"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:ChatWindow, IsDesignTimeCreatable=True}"
        Title="ChatWindow" 
        MinWidth="200" MinHeight="100"
        Width="400" Height="200"
        AllowsTransparency="True" Background="Transparent"
        WindowStyle="None" ResizeMode="CanResizeWithGrip"
        Closing="Window_Closing">
    <Behaviors:Interaction.Behaviors>
        <utils_ui:DragMoveBehavior IsEnabled="{Binding ViewModel.IsDraggable}" />
        <!--<utils_ui:DragMoveBehavior />-->
    </Behaviors:Interaction.Behaviors>
    <Grid Background="White">
        <StackPanel Orientation="Vertical"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <ui:TextBlock Text="Chat window!"/>
            <ui:TextBox Text="Chat textbox!" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Window>
